body 
    font-family "san francisco"!important
    font-weight 500!important 
    p 
        font-size 15px
        
/*login*/
.bg-login
    padding-left: 0px;
    background-image url("../img/bg-login.jpg")
    height 850px
    background-repeat no-repeat
    background-size cover
    
    div
        background-size contain
        background-repeat no-repeat
        background-image url("../icon/hex-texto.png")
        &:nth-child(1)
            margin-top 5%
            width 385px
            height 385px
            
                
            p
                top 24%
                padding 0% 21% 0% 12%
                position relative
            
            
        &:nth-child(2)
            position absolute
            top 8.5%
            left 35%
            width 60px
            height 60px
            
            @media screen and (max-width:1024px)
                top 7% !important
                left 46% !important
            img
                position relative
                left 32%
                top 24%
        &:nth-child(3)
                position absolute
                top 15%
                left 38%
                width 60px
                height 60px
                
                @media screen and (max-width:1024px)
                    top 13.5% !important
                    left 50.5% !important
                img
                    position relative
                    left 27%
                    top 24%
        &:nth-child(4)
                position absolute
                top 8.5%
                left 42%
                width 60px
                height 60px
                @media screen and (max-width:1024px)
                    top 7% !important
                    left 55% !important
                img
                    position relative
                    left 20%
                    top 32%
